<div class="container">

    <div class="row">
<div class="col col-md-3">
    <h1>Welcome</h1>
    <form asp-action="Login" method="Post">
          @if (ViewBag.Success != null && ViewBag.Success == true)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
            else if (ViewBag.Success != null && ViewBag.Success == false)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }
           
        <div class="form-group">

            <label>Email</label>
            <br/>
            <input type="text" required class="form-control" asp-for="Email"/>
       </div>
       <div class="form-group">

            <label>Password</label>
              <input type="password" required  class="form-control" asp-for="Password"/>
          
       </div>
         <div class="form-group">
            <label></label>
            <input type="submit" class="btn btn-primary" value="Login"/>
             <a asp-action="CreateUser" asp-controller="User" class="btn btn-secondary">Sign Up</a>
          
            
        
           

       </div>
       
    </form>
         

<div>



</div>
</div>

