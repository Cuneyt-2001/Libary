@model _Libary.Models.LoanViewModel

@{
    ViewData["Title"] = "AddLoan";
}

<h1>AddLoan</h1>
<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookID" />
            @if (ViewBag.Success != null && ViewBag.Success == true)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
            else if (ViewBag.Success != null && ViewBag.Success == false)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }
            <div class="form-group">
                <label class="control-label">Book Title</label>
                <input class="form-control" value="@ViewBag.BookTitle" disabled />
            </div>

            <div class="form-group">
                <label asp-for="LoanDate"  class="control-label" ></label>
                <input asp-for="LoanDate" required class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="LoanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" required class="form-control"  min="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Loan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

